{
	"author": "Luis Blanco <luisblanco1337@gmail.com>",
	"name": "glfw-raub",
	"version": "5.3.0",
	"description": "GLFW for Node.js",
	"license": "MIT",
	"main": "index.js",
	"keywords": [
		"addon",
		"glfw",
		"opengl",
		"gl",
		"graphics",
		"window",
		"c++",
		"bindings",
		"native",
		"gyp"
	],
	"files": [
		"js",
		"core.js",
		"index.js",
		"index.d.ts",
		"install.js",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"engines": {
		"node": ">=18.16.0",
		"npm": ">=9.5.1"
	},
	"scripts": {
		"postinstall": "node install",
		"eslint": "eslint .",
		"build": "cd src && node-gyp rebuild -j max --silent && node -e \"require('addon-tools-raub').cpbin('glfw')\" && cd ..",
		"build-only": "cd src && node-gyp build -j max --silent && node -e \"require('addon-tools-raub').cpbin('glfw')\" && cd ..",
		"test": "node --test --watch .",
		"test-ci": "node --test"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/node-3d/glfw-raub.git"
	},
	"dependencies": {
		"addon-tools-raub": "^7.4.0",
		"deps-opengl-raub": "^5.1.1",
		"segfault-raub": "^2.1.2"
	},
	"devDependencies": {
		"@types/node": "^20.8.3",
		"eslint": "^8.51.0",
		"eslint-plugin-node": "^11.1.0",
		"node-addon-api": "^7.0.0",
		"typescript": "^5.2.2"
	}
}
